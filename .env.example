# Environment Configuration Template
# Copy this file to .env and customize for your setup
# For local development: Use .env.local (with local Supabase)
# For production: Use .env.production (with remote Supabase)

# Kalshi API Configuration
KALSHI_API_KEY_ID=your_api_key_id_here
KALSHI_PRIVATE_KEY_PATH=../kalshi_private_key.pem
KALSHI_WS_URL=wss://api.elections.kalshi.com/trade-api/ws/v2

# Application Settings
WINDOW_MINUTES=10
HOT_MARKETS_LIMIT=20
RECENT_TRADES_LIMIT=200

# PostgreSQL Database Configuration

# Remote Supabase PostgreSQL Configuration (Production)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres
DATABASE_URL_POOLED=postgresql://postgres:[YOUR_PASSWORD]@db.[PROJECT_ID].supabase.co:6543/postgres
SUPABASE_URL=https://[PROJECT_ID].supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Local Supabase Configuration (Development)
# Uncomment these lines when using local Supabase development instance
# USE CONNECTION STRING FROM SUPABASE POOLED SESSION in PROD
# DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
# SUPABASE_URL=http://localhost:54321
# SUPABASE_ANON_KEY=your_local_supabase_anon_key_here
# SUPABASE_SERVICE_ROLE_KEY=your_local_supabase_service_key_here

# Database is always PostgreSQL - no configuration needed

# Server Configuration
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Environment Mode
NODE_ENV=development  # development, production
ENVIRONMENT=local     # local, production
DEBUG=false